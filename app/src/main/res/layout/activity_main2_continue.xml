<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3.7"
    android:orientation="vertical"
    android:background="@drawable/gameplaybackground"
    tools:context=".MainActivity2_continue">

    <LinearLayout
        android:layout_weight="0.3"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_weight="1"
            android:id="@+id/imageViewSkip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/skip"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <TextView
            android:layout_weight="2"
            android:id="@+id/levelBoard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@drawable/level_board"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:padding="5dp"
            android:autoSizeTextType="uniform"
            android:text="Puzzle 2"
            android:textColor="@color/black"
            android:textAllCaps="false"/>

        <ImageView
            android:layout_weight="1"
            android:id="@+id/imageViewHint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/hint"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/puzzle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/p1"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center">

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_weight="1"
            android:weightSum="6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/answer"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:background="@color/white"/>

            <ImageView
                android:id="@+id/delete"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/delete"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>

            <Button
                android:id="@+id/buttonSubmit"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="submit"
                android:textStyle="italic"
                android:padding="0dp"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:background="@drawable/background_no_border_to_border_grey"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp">

            <Button
                android:id="@+id/b0"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="1"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:background="@drawable/background_light_black_to_grey"/>

            <Button
                android:id="@+id/b1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="2"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:background="@drawable/background_light_black_to_grey"/>

            <Button
                android:id="@+id/b2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="3"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:background="@drawable/background_light_black_to_grey"/>

            <Button
                android:id="@+id/b3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="4"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:background="@drawable/background_light_black_to_grey"/>

            <Button
                android:id="@+id/b4"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="5"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:background="@drawable/background_light_black_to_grey"/>

            <Button
                android:id="@+id/b5"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="6"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:background="@drawable/background_light_black_to_grey"/>

            <Button
                android:id="@+id/b6"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="7"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:background="@drawable/background_light_black_to_grey"/>

            <Button
                android:id="@+id/b7"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="8"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:background="@drawable/background_light_black_to_grey"/>

            <Button
                android:id="@+id/b8"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="9"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:background="@drawable/background_light_black_to_grey"/>

            <Button
                android:id="@+id/b9"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="0"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:background="@drawable/background_light_black_to_grey"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>